<div class="cover l1" ng-class="{'has-picture': cover.url}" ng-if="cover.url">
    <div class="image" image-src="cover.url" sb-image></div>
    <h3>
        <span class="title block" data-rows="1">{{ cover.title }}</span>
        <span class="subtitle" data-rows="1">{{ cover.subtitle }}</span>
    </h3>
</div>